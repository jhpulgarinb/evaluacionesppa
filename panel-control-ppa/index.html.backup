		<script>
			// Contraseñas
        const correctPasswordContabilidad = "Contabilidad2025";
        const correctPasswordPQRSFC = "SST2025";

        // Funciones para Contabilidad
        function showPasswordModalContabilidad(event) {
            event.preventDefault();
            document.getElementById("passwordModalContabilidad").style.display = "flex";
        }

        function verifyPasswordContabilidad() {
            const input = document.getElementById("passwordInputContabilidad").value;
            if (input === correctPasswordContabilidad) {
                window.open("https://app.powerbi.com/view?r=eyJrIjoiMDNlM2Y1MjEtM2ZlZS00Y2YwLTgxNjUtYzQ3NTRiMTcyYzI2IiwidCI6Ijc0MmI3NWQ0LWU3YzItNDNkYy1hYzQ4LWVmMjQ1NDMwZjg2OSJ9", "_blank");
                hideModal('passwordModalContabilidad');
            } else {
                alert("Contraseña incorrecta. Intente nuevamente.");
            }
        }

        // Funciones para PQRSFC
        function showPasswordModalPQRSFC(event) {
            event.preventDefault();
            document.getElementById("passwordModalPQRSFC").style.display = "flex";
        }

        function verifyPasswordPQRSFC() {
            const input = document.getElementById("passwordInputPQRSFC").value;
            if (input === correctPasswordPQRSFC) {
                window.open("https://app.powerbi.com/view?r=eyJrIjoiODg2MDZmMzMtZGEyOC00YmNhLTk5NmItMTM4ZGNlNjE4ZmI3IiwidCI6Ijc0MmI3NWQ0LWU3YzItNDNkYy1hYzQ4LWVmMjQ1NDMwZjg2OSJ9", "_blank");
                hideModal('passwordModalPQRSFC');
            } else {
                alert("Contraseña incorrecta. Intente nuevamente.");
            }
        }

        // Funcion general para ocultar modales
        function hideModal(modalId) {
            document.getElementById(modalId).style.display = "none";
            // Limpiar los campos de contraseña
            if (modalId === 'passwordModalContabilidad') {
                document.getElementById("passwordInputContabilidad").value = "";
            } else if (modalId === 'passwordModalPQRSFC') {
                document.getElementById("passwordInputPQRSFC").value = "";
            }
        }

        // Nuevo script para la tarjeta de Proyectos y Politicas
        document.addEventListener("DOMContentLoaded", function() {
            listPDFs();
        });

        function listPDFs() {
            // En un entorno de servidor, aqui es donde se haria una solicitud para obtener la lista de archivos.
            // Para este ejemplo estatico, usaremos una lista de archivos predefinida.
            const pdfFiles = [
                "Proyecto-Evaluaciones-y-Reportes-Campo.pdf",
                "Presentacion-Politicas-de-Seguridad.pdf",
                "Politicas-Seguridad-Informacion-PPA.pdf",
                "Contrato-Servicios-Tecnologicos.pdf",
                "PPA-PRO-NMA-002-0125 (PROCEDIMIENTO-RECLAMOS-NOMINA-PQRSFC).pdf",
                "PPA-PRO-NMA-003-0125 (PROCEDIMIENTO-DECUCCIONES-NOMINA).pdf",
                "PPA-PRO-NMA-001-0125 (PROCEDIMIENTO-LIQUIDACION-DEFINITIVA-EMPLEADOS).pdf"

            ];
            const dropdown = document.getElementById("pdf-dropdown");

            pdfFiles.forEach(file => {
                const option = document.createElement("option");
                option.value = "Evaluaciones/" + file;
                option.text = file.replace(/-/g, " ").replace(/\.pdf$/, "").toUpperCase();
                dropdown.add(option);
            });
        }

        function openSelectedPDF() {
            const dropdown = document.getElementById("pdf-dropdown");
            const selectedFile = dropdown.value;
            if (selectedFile) {
                window.open(selectedFile, "_blank");
            }
        }
		</script>
