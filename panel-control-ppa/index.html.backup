        :root {
            --color-header: #1a365d;
            --color-footer: #bee3f8;
            --color-background: #f0fff4;
            --color-card: #ffffff;
            --color-primary: #2b6cb0;
            --color-secondary: #38a169;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: var(--color-background);
            color: #2d3748;
            min-height: 100vh;
        }
        .container {
            width: 95%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }
        header {
            background-color: var(--color-header);
            color: white;
            padding: 20px 0;
            text-align: center;
            border-radius: 8px 8px 0 0;
            margin-bottom: 25px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 15px;
        }
        .header-content {
            display: flex;
            align-items: center;
        }
        .logo {
            height: 70px;
            width: auto;
        }
        h1 {
            margin: 0;
            font-size: 28px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .menu {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        .menu-item {
            background-color: var(--color-card);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: all 0.3s ease;
            text-align: center;
            border-top: 4px solid var(--color-primary);
        }
        .menu-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 15px rgba(0,0,0,0.1);
        }
        .menu-item a {
            display: block;
            padding: 25px 20px;
            text-decoration: none;
            color: #2d3748;
        }
        .menu-item h2 {
            margin-top: 15px;
            color: var(--color-primary);
            font-size: 20px;
            font-weight: 600;
        }
        .menu-item p {
            margin-bottom: 0;
            color: #4a5568;
            font-size: 14px;
            line-height: 1.5;
        }
        .menu-item-icon {
            font-size: 42px;
            margin-bottom: 15px;
            display: block;
            background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            width: 60px;
            height: 60px;
            margin: 0 auto 15px;
            line-height: 60px;
        }
        .menu-item select {
            width: 80%;
            padding: 8px;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .menu-item button {
            margin-top: 10px;
            padding: 8px 15px;
            background-color: var(--color-primary);
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            background-color: var(--color-footer);
            border-radius: 0 0 8px 8px;
            font-size: 13px;
            color: #2d3748;
            box-shadow: 0 -4px 6px rgba(0,0,0,0.05);
        }
        .footer-text {
            margin: 5px 0;
        }
        .motto {
            font-style: italic;
            font-weight: bold;
            margin: 15px 0;
            color: #006400;
            font-size: 30px;
            line-height: 1.4;
        }
        @media (max-width: 600px) {
            .menu {
                grid-template-columns: 1fr;
            }
            h1 {
                font-size: 24px;
            }
            header {
                flex-direction: column;
                padding: 15px;
            }
            .logo {
                height: 40px;
                margin-bottom: 10px;
            }
            .motto {
                font-size: 15px;
                padding: 0 15px;
            }
        }

        /* Estilos para los modales */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }
        .modal-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            width: 300px;
        }
        .modal-content input {
            padding: 8px;
            margin: 10px 0;
            width: 80%;
        }
        .modal-content button {
            margin: 5px;
            padding: 8px 15px;
            cursor: pointer;
        }
        .alternative-link {
            margin-top: 10px;
        }
        .alternative-link a {
            color: var(--color-primary);
            text-decoration: none;
        }
    </style>
